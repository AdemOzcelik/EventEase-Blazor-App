@page "/event-card"
@rendermode InteractiveServer

<h3>Event Details</h3>

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <label>Event Name:</label>
        @* @bind:event="oninput" ensures the text updates every time you press a key *@
        <input class="form-control mb-2" @bind="EventName" @bind:event="oninput" placeholder="Event Name" />
        
        <label>Location:</label>
        <input class="form-control mb-2" @bind="Location" @bind:event="oninput" placeholder="Location" />
        
        <hr />
        <p class="card-text">Editing: <strong>@EventName</strong></p>
        <p class="card-text">At: <strong>@Location</strong></p>
    </div>
</div>

@code {
    private string EventName { get; set; } = "Community Tech Talk";
    private string Location { get; set; } = "Main Hall";
}